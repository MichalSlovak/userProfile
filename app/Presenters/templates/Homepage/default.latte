{block content}
    <h1 n:block="title">Můj blogg</h1>
    <a n:href="User:default">← UserDefault</a>
    {foreach $posts as $post}
        <div class="post">
            <div class="date">{$post->created_at|date:'F j, Y'}</div>

            <h2>{$post->title}</h2>

            <div>{$post->content}</div>
        </div>
    {/foreach}

{/block}